/* EDIT THIS FILE BEFORE USING
WHEN NOT USING A PASSWORD PLEASE REMOVE '-p $DB_PASS' */

#!/bin/bash

// MYSQL DB Info
DB_NAME="digital-portfolio"
DB_USER="root"
DB_PASS=""
DB_HOST="localhost"

GIT_REPO="/path/to/git/repo" // path to you repo
BACKUP_DIR="DATABASE_BACKUPS"
FILENAME="$DB_NAME-$(date +%Y-%m-%d).sql"

echo $GIT_REPO/$BACKUP_DIR/$FILENAME

/c/xampp/mysql/bin/mysqldump -u $DB_USER -p $DB_PASS --skip-extended-insert $DB_NAME > $GIT_REPO/$BACKUP_DIR/$FILENAME
cd $GIT_REPO
git add $BACKUP_DIR/$FILENAME